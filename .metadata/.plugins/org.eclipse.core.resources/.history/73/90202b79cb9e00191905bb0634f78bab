package Zerg;

import terran.Barrack;
import terran.EngeeniaringBay;
import terran.FireBat;
import terran.Marine;
import terran.TerranApp;

public class ZergApp {
	
	//누가, 누구를
	public static void attack(Zerg u1, Zerg u2){
		//히드라 공격력 : 10
		//울트라 공격력 : 30
		//히드라, 울트라 방어력 : 1
		int damage = u1.getAttack()-u2.getArmor(); 
		u2.setSt(u2.getSt() - damage);
	}
	
	public static void printUnit(Zerg u){
		System.out.println(u.getName() + "의 체력은 " + u.getSt());
	}

	public static void main(String[] args) {
		//1. 배럭생성
		Hatchery hatchery = new Hatchery();
		
		//2. 히드라 2마리 생성 h1, h2
		Hydra h1 = hatchery.makeUltra();
		Ultra h2 = hatchery.makeUltra();
		
		//3. 히드라 2마리 생성 ult1, ult2
		Ultra ult1 = hatchery.makeUltra();
		Ultra ult2 = hatchery.makeUltra();
		
		//4. m1, f2 전투
		TerranApp.attack(m1, f2);
		
		//5. f1, f2 전투
		TerranApp.attack(f1, f2);
		
		//6. f2의 체력확인
		TerranApp.printUnit(f2);
		TerranApp.printUnit(f2);
		
		//7. EngeeniaringBay 건설
		EngeeniaringBay engeeniaringbay = new EngeeniaringBay();
		
		//8. 공격력 업그레이드
		engeeniaringbay.upgradeAttack();
		
		//9. 방어력 업그레이드
		engeeniaringbay.upgradeArmor();
		
		//10. 마린의 공격력 방어력 확인
		System.out.println("마린의 공격력" + m1.getAttack());
		System.out.println("마린의 방어력" + m1.getArmor());
	}

}
